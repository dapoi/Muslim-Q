<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp"
    android:clipToPadding="false"
    tools:context=".presentation.view.tasbih.TasbihFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:contentInsetStart="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:includeFontPadding="false"
            android:text="@string/tasbih"
            android:textAlignment="center"
            android:textColor="@color/green_base"
            android:textSize="20sp" />

    </com.google.android.material.appbar.MaterialToolbar>

    <com.google.android.material.chip.Chip
        android:id="@+id/chip_type"
        style="@style/Widget.MaterialComponents.Chip.Action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:checkable="false"
        android:fontFamily="@font/poppins_bold"
        android:includeFontPadding="false"
        tools:text="Pagi"
        android:textColor="@color/white_base"
        app:chipBackgroundColor="@color/green_base"
        app:chipCornerRadius="8dp"
        app:chipStrokeColor="@color/green_base"
        app:chipStrokeWidth="1dp"
        app:ensureMinTouchTargetSize="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider"
        android:layout_width="1.5dp"
        android:layout_height="0dp"
        android:layout_marginVertical="4dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@id/chip_type"
        app:layout_constraintStart_toEndOf="@id/chip_type"
        app:layout_constraintTop_toTopOf="@id/chip_type" />

    <HorizontalScrollView
        android:id="@+id/sv_chip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintEnd_toStartOf="@id/divider2"
        app:layout_constraintStart_toEndOf="@id/divider"
        app:layout_constraintTop_toTopOf="@id/chip_type"
        app:layout_constraintBottom_toBottomOf="@id/chip_type">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/cg_dzikir"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingHorizontal="16dp"
            app:itemSpacing="8dp"
            app:singleLine="true" />

    </HorizontalScrollView>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider2"
        android:layout_width="1.5dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/chip_type"
        app:layout_constraintEnd_toStartOf="@+id/iv_settings"
        app:layout_constraintTop_toTopOf="@+id/chip_type" />

    <ImageView
        android:id="@+id/iv_settings"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_settings"
        app:layout_constraintBottom_toBottomOf="@+id/chip_type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/chip_type"
        app:tint="@color/green_base" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider2">

        <ScrollView
            android:id="@+id/sv_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/cl_counter"
            android:layout_alignParentTop="true"
            android:paddingTop="32dp"
            android:scrollbars="none">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_count_tasbih"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:includeFontPadding="false"
                        android:textColor="@color/green_base"
                        android:textSize="48sp"
                        tools:text="0" />
                    <TextView
                        android:id="@+id/tv_max_count_new"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:includeFontPadding="false"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:layout_marginStart="4dp"
                        android:layout_marginBottom="4dp"
                        tools:text="/ 33" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <TextView
                    android:id="@+id/tv_dzikir_arab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/amiri_bold"
                    android:includeFontPadding="false"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:padding="4dp"
                    android:lineSpacingMultiplier="1.2"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_dzikir"
                    tools:text="أَعُوذُ بِاللَّهِ مِنَ الشَّيْطَانِ الرَّجِيمِ\nالرَّجِيمِ" />

                <TextView
                    android:id="@+id/tv_dzikir_meaning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_gravity="start"
                    app:layout_constraintEnd_toEndOf="@+id/tv_ayah_latin"
                    app:layout_constraintStart_toStartOf="@+id/tv_ayah_latin"
                    app:layout_constraintTop_toBottomOf="@+id/tv_ayah_latin"
                    tools:text="Segala puji bagi Allah, Tuhan seluruh alam" />
            </androidx.appcompat.widget.LinearLayoutCompat>

        </ScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_counter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingTop="20dp"
            android:clipToPadding="false"
            android:paddingBottom="70dp">
            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="-10dp"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_tasbih"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:importantForAccessibility="no"
                android:rotationY="180"
                android:src="@drawable/ic_touch"
                app:fabCustomSize="200dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:maxImageSize="110dp"
                app:tint="@color/white_header" />

