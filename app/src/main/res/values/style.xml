<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MuslimQ.Toolbar">
        <item name="android:textColor">@color/white_base</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="collapsedTitleStyle" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/green_base</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="collapsedTabletTitleStyle" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/green_base</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="expandedTitleStyle" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textColor">@color/green_base</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="BottomTextNavActive" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/green_base</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="BottomTextNavInactive" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="PopUpMenuTablet" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CurvedDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/bg_round_white</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="TransparentDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="Rounded.Image" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
        <item name="android:itemPadding">10dp</item>
    </style>

    <style name="Overlay.BottomSheet" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="backgroundTint">@color/white_base</item>
        <item name="shapeAppearance">@style/Shape.BottomSheet</item>
    </style>

    <style name="Shape.BottomSheet" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
    </style>

</resources>